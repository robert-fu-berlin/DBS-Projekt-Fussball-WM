* {
	padding: 0;
	margin: 0;
}

body {
	padding: 10px;
	font-family: "Lucida Grande";
}

p.error-message {
	font-weight: bold;
	color: red;
}

li {
	margin: 0 0 0 20px;
	color: inherit;
}

input.button {
	display: inline;
	width: auto !important;
}

fieldset {
	display: inline-block;
	border: 1px solid black;
	margin: 0 10px 10px 0;
}

fieldset label {
	margin: 10px 10px 0 10px;
	font-size: small;
}

fieldset input {
	
}

fieldset.worldcup-group {
	width: 200px;
}

fieldset.worldcup-group legend {
	padding: 0 10px;
}

fieldset.worldcup-group input, fieldset.worldcup-group select {
	width: 180px;
	margin: 10px;
}